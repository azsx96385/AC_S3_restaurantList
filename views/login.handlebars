<div class="container">
    <div class="row">
        <div class="col-sm-8 m-auto">
            <div class="card card-body">
                <h2 class="text-center mb-3">Login</h2>
                {{> message}}
                <form action="/users/login" method="post">

                    <div class="form-group">
                        <label for="email">Email: </label>
                        <input type="email" id="email" class="form-control" name="email" value="{{ email }}">
                    </div>

                    <div class="form-group">
                        <label for="password">Password: </label>
                        <input type="password" id="password" class="form-control" name="password"
                            value="{{ password }}">
                    </div>

                    <button class="btn btn-success btn-block">Login</button>
                </form>
                <a href="/auth/facebook" class="btn btn-primary  btn-block mt-3">FaceBook</a>
                <p class="lead mt-3">Don't have account? <a href="/user/login">Register</a></p>
            </div>
        </div>
    </div>
</div>